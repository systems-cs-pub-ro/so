CC = gcc
CFLAGS = -Wall

LDFLAGS = -L.

all: main_static


main_static: main.o libhexdump_static.a
	$(CC) -o $@ $< -lhexdump_static $(LDFLAGS)

libhexdump_static.a: sample.o hexdump.o
	ar rc $@ $^

main.o: main.c
hexdump.o: hexdump.c
sample.o: sample.c

.PHONY:
clean:
	rm -f *.o main_static libhexdump_static.a
